{
  "name": "poe1-kakao-launcher",
  "version": "1.0.0",
  "description": "Path of Exile 1 Kakao launcher for Steam Deck",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64"
  },
  "keywords": [
    "poe",
    "pathofexile",
    "kakao",
    "steamdeck"
  ],
  "author": "Community",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.poe1.kakao.launcher",
    "productName": "POE1 Kakao Launcher",
    "win": {
      "target": ["portable", "nsis"],
      "icon": "icon.ico"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "POE1 Kakao Launcher"
    },
    "directories": {
      "output": "dist"
    }
  }
}
